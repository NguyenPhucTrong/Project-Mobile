<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <link rel="stylesheet" href="/stylesheets/bootstrap.min.css" />
    <link
      rel="stylesheet"
      href="/font-awesome-4.7.0/css/font-awesome.min.css"
    />
    <title><%= title %></title>
  </head>
  <body>
    <!-- =============== Navigation ================ -->
    <div class="container-menu">
      <div class="navigation-menu">
        <ul>
          <li>
            <a href="/">
              <span class="icon">
                <ion-icon name="logo-apple"></ion-icon>
              </span>
              <span class="title">Brand Name</span>
            </a>
          </li>

          <li>
            <a href="/">
              <span class="icon">
                <ion-icon name="home-outline"></ion-icon>
              </span>
              <span class="title">Dashboard</span>
            </a>
          </li>

          <li>
            <a href="/products/product">
              <span class="icon">
                <ion-icon name="cash-outline"></ion-icon>
              </span>
              <span class="title">Product</span>
            </a>
          </li>

          <% if (_id == null) { %>
          <li>
            <a href="/user/profile">
              <span class="icon">
                <ion-icon name="person-outline"></ion-icon>
              </span>
              <span class="title">Profile</span>
            </a>
          </li>
          <% } else { %>
          <li>
            <a href="/user/profile/<%= _id %>">
              <span class="icon">
                <ion-icon name="person-outline"></ion-icon>
              </span>
              <span class="title">Profile</span>
            </a>
          </li>
          <% } %>

          <li>
            <a href="/user/staff">
              <span class="icon">
                <ion-icon name="people-outline"></ion-icon>
              </span>
              <span class="title">Staff</span>
            </a>
          </li>

          <li>
            <a href="#">
              <span class="icon">
                <ion-icon name="settings-outline"></ion-icon>
              </span>
              <span class="title">Settings</span>
            </a>
          </li>

          <li>
            <a href="#">
              <span class="icon">
                <ion-icon name="lock-closed-outline"></ion-icon>
              </span>
              <span class="title">Password</span>
            </a>
          </li>

          <li>
            <a href="/user/signin">
              <span class="icon">
                <ion-icon name="log-out-outline"></ion-icon>
              </span>
              <span class="title">Sign Out</span>
            </a>
          </li>
        </ul>
      </div>

      <!-- ========================= Main ==================== -->
      <div class="main-menu">
        <div class="topbar-menu">
          <div class="toggle">
            <ion-icon name="menu-outline"></ion-icon>
          </div>

          <div class="search-menu">
            <label>
              <input type="text" placeholder="Search here" />
              <ion-icon
                name="search-outline"
                style="padding-top: 10.4px"
              ></ion-icon>
            </label>
          </div>

          <div class="user-menu">
            <img src="/images/1.jpg" alt="images" />
          </div>
        </div>

        <!-- ======================= Cards ================== -->
        <div class="cardBox-menu">
          <div>
            <h1 class="title">Sản phẩm</h1>
          </div>
          <nav
            class="navbar navbar-expand-lg bg-body-tertiary"
            style="margin-left: 54%; margin-right: 30%"
          >
            <div class="container-fluid">
              <button
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent"
                aria-expanded="false"
                aria-label="Toggle navigation"
              >
                <span class="navbar-toggler-icon"></span>
              </button>
              <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                  <li class="nav-item dropdown">
                    <a
                      class="nav-link dropdown-toggle"
                      href="#"
                      role="button"
                      data-bs-toggle="dropdown"
                      aria-expanded="false"
                    >
                      Sản phẩm
                    </a>
                    <ul class="dropdown-menu">
                      <li>
                        <a class="dropdown-item" href="/products/add-product"
                          >Thêm sản phẩm</a
                        >
                      </li>
                      <li>
                        <a class="dropdown-item" href="/products/edit-product"
                          >Sửa sản phẩm</a
                        >
                      </li>
                    </ul>
                  </li>
                </ul>
              </div>
            </div>
          </nav>
        </div>
        <div class="product">
          <%products.forEach(function (item) { %>
          <div class="card" style="width: 18rem">
            <img src="<%= item.imagePath %>" class="card-img-top" alt="..." />
            <div class="card-body">
              <h5 class="card-title"><%= item.title%></h5>
              <p><%= item.quantity %></p>
              <p class="card-text"><%= item.description %></p>
              <p><%= item.price %></p>
              <a
                href="/products/edit-product/<%= item._id %>"
                class="btn btn-danger pull-right"
                role="button"
                ><ion-icon name="create-outline"></ion-icon
              ></a>
              <button
                style="margin-right: 5px"
                class="btn btn-danger pull-primary pull-right delete-product"
              >
                <ion-icon name="trash-outline"></ion-icon>
              </button>
            </div>
          </div>
          <% });%>
        </div>
      </div>
    </div>

    <!-- =========== Scripts =========  -->
    <script src="/javascripts/jquery-1.12.4.min.js"></script>
    <script src="/javascripts/main.js"></script>
    <script src="/javascripts/delete.js"></script>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <!-- ====== ionicons ======= -->
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
  </body>
</html>
