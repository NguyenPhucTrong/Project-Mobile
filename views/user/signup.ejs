<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/signin.css" />

    <title>Document</title>
  </head>
  <body>
    <div class="wrapper">
      <div class="logo">
        <img
          src="https://www.freepnglogos.com/uploads/twitter-logo-png/twitter-bird-symbols-png-logo-0.png"
          alt=""
        />
      </div>
      <div class="text-center mt-4 name">Twitter</div>
      <% if (hasErrors) { %>
      <div class="messages">
        <% messages.forEach(function(messages) { %>
        <p><%= messages %></p>

        <% }); %>
      </div>
      <% } %>
      <form class="p-3 mt-3" action="/user/signup" method="post">
        <div class="form-field d-flex align-items-center">
          <span for="email" class="far fa-user"></span>
          <input type="text" id="email" name="email" class="form-control" />
        </div>
        <div class="form-field d-flex align-items-center">
          <span for="password" class="fas fa-key"></span>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            required
          />
        </div>
        <button type="submit" class="btn mt-3">Sign Up</button>
      </form>
      <div class="text-center fs-6">
        <a href="/user/signin">Login</a>
      </div>
    </div>

    <!-- =========== Scripts =========  -->

    <script src="javascripts/main.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <!-- ====== ionicons ======= -->
    <script
      type="module"
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"
    ></script>
    <script
      nomodule
      src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"
    ></script>
  </body>
</html>
